# ========================================
# Backend 环境变量配置示例
# ========================================

# 应用配置
APP_HOST=0.0.0.0
APP_PORT=8000

# 数据库配置
DB_DIALECT=mysql+pymysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=code_reader
DB_USER=root
DB_PASSWORD=your_password
DB_PARAMS=charset=utf8mb4
DB_ECHO=0
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# GitHub API 配置
GITHUB_TOKEN=your_github_token

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# LLM 配置
LLM_MAX_CONCURRENT=3
LLM_BATCH_SIZE=10
LLM_REQUEST_TIMEOUT=120
LLM_RETRY_DELAY=2

# RAG 配置
RAG_BASE_URL=http://localhost:32421
RAG_BATCH_SIZE=100

# API 配置
API_BASE_URL=http://localhost:8000
README_API_BASE_URL=http://localhost:8001
CLAUDE_CHAT_API_BASE_URL=http://localhost:8003

# 存储路径
LOCAL_REPO_PATH=./data/repos
RESULTS_PATH=./data/results
VECTORSTORE_PATH=./data/vectorstores

# Celery 配置
CELERY_WORKER_CONCURRENCY=2
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 登录密码
PASSWORD=your_password

